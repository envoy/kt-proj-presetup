#!/bin/bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -e

main() {
    makeNewDirectories
    installBoto3
    downloadCertificateFromS3
    downloadJavaAgent
}

makeNewDirectories() {
    mkdir -p agent
    mkdir -p cert
}

installBoto3() {
    pip install boto3
}

downloadCertificateFromS3() {
    python downloadS3.py
    mv $SSL_KEY_STORE_S3_FILENAME cert/$SSL_KEY_STORE_S3_FILENAME
}

downloadJavaAgent() {
    wget -O agent/dd-java-agent.jar https://dtdg.co/latest-java-tracer
}

main
